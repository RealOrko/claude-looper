{
  "name": "claude-looper-agents",
  "version": "1.0.0",
  "description": "Multi-agent framework with event-driven state management for autonomous task execution",
  "type": "module",
  "main": "agent-core.js",
  "bin": {
    "claude-looper": "./cli.js"
  },
  "scripts": {
    "test": "node --test *.test.js",
    "test:coverage": "c8 --reporter=text --reporter=html node --test *.test.js",
    "test:coverage:check": "c8 --check-coverage --lines 60 --functions 60 --branches 50 node --test *.test.js",
    "docker": "docker build -t claude ."
  },
  "keywords": [
    "multi-agent",
    "autonomous",
    "claude",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "blessed": "^0.1.81",
    "handlebars": "^4.7.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "c8": "^10.1.3"
  }
}
