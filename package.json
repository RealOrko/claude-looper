{
  "name": "claude-autonomous-runner",
  "version": "1.0.0",
  "description": "Run Claude in continuous autonomous mode with LLM-based supervision",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "claude-auto": "./src/cli-max.js"
  },
  "scripts": {
    "start": "node src/cli-max.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:agents": "vitest run src/agents/tests",
    "docker:build": "docker build -t claude .",
    "build": "cd src/web && npm run build && cd ../.. && docker build -t claude .",
    "build:web": "cd src/web && npm run build",
    "dev:web": "cd src/web && npm run dev"
  },
  "devDependencies": {
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "express": "^5.2.1",
    "glob": "^10.3.0",
    "ink": "^6.5.1",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-spinner": "^5.0.0",
    "react": "^19.2.3",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "claude",
    "ai",
    "autonomous",
    "agent",
    "cli",
    "supervisor"
  ],
  "license": "MIT"
}
